datasource db {
    provider  = "postgresql"
    url       = env("POSTGRES_URL") // uses connection pooling
    directUrl = env("PRISMA_DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
    output   = "./lib/generated/prisma"
}

model User {
    id Int @id @default(autoincrement())

    email String @unique
    pass String
    company String?
    inn Int?


    adress Adress[]
    orderHistory OrderHistory[]
    Fav Fav[]
    Cart Cart[]
    @@map("user")
}

model Contact {
    id Int @id @default(autoincrement())
    
    user User @relation(fields: [userId], references: [id])
    userId Int
    name String
    phone String
    defaultContact Boolean
    @@map("contact")
}

model Adress {
    id Int @id @default(autoincrement())

    user User @relation(fields: [userId], references: [id])
    userId Int
    adress String
    defaultAdress Boolean
}

model OrderHistory {
    id Int @id @default(autoincrement())

    user User @relation(fields: [userId], references: [id])
    userId Int
    status String
    contact Int
    deliveryType String
    adress Int
    transport String
    
}

model Fav {
    id Int @id @default(autoincrement())
    
    user User @relation(fields: [userId], references: [id])
    userId Int
}



model Cart {
    id Int @id @default(autoincrement())
    
    user User @relation(fields: [userId], references: [id])
    userId Int
}

model Product {
    id Int @id @default(autoincrement())

    cat Category @relation(fields: [categoryId], references: [id])
    categoryId Int

    totalMount Int @default(0)

    brand Int
    desc String
    img String
    sticker String
    price Int
    count Int
    //sizes sizes[]
}